RewriteEngine On

# Redirect requests with ".php" extension to non-extension URL
#RewriteCond %{THE_REQUEST} \s/+(.+?)\.php [NC]
#RewriteRule ^ /%1 [R=301,L,NE]

# Internally map clean URLs to PHP files
#RewriteCond %{REQUEST_FILENAME} !-d
#RewriteCond %{REQUEST_FILENAME}.php -f
#RewriteRule ^(.+?)/?$ $1.php [L]

# Redirect requests for "about.php" to non-extension URL
RewriteCond %{THE_REQUEST} \s/+(about).php [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# Internally map other clean URLs to PHP files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]